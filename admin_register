    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         SimpleDateFormat sc = new SimpleDateFormat("yyyy-mm-dd");
            if (d.getDate() != null) {
             date = sc.format(d.getDate()); 
            // id = Integer.parseInt(i.getText());
             firstname = f.getText();
             lastname = l.getText();
             gender = comg.getSelectedItem().toString(); // Assuming comg is a JComboBox for gender
             dateOfBirth = null;
             email = e.getText();
             mobileno = m.getText();
             city = c.getText();
             state = s.getText();
             country = con.getText();
             pin = p.getText();
             createpassword = crp.getText();
             
             boolean status1 = Employee_Register.ValidationName.name_Validation(f.getText());
            boolean status2 = Employee_Register.ValidationName.name_Validation(l.getText());
            boolean status3 = Employee_Register.ValidationName.name_Validation(m.getText());
            boolean status4 = Employee_Register.ValidationName.name_Validation(m.getText());
            boolean passstatus = Employee_Register.Validationpass.pass_Validation(crp.getText());
            boolean passstatus1 = Employee_Register.Validationpass.pass_Validation(confirm.getText());
            boolean numberstatus = Employee_Register.Validationnumber.number_Validation(m.getText());
            

 try {
     
     
      if (i != null && !i.getText().isEmpty()) {
        id = Integer.parseInt(i.getText());


     } else if (f.getText().equals("")) {
            JOptionPane.showMessageDialog(null,"* first name should not be empty");
        } else if (!status1 || !status1){
            
            JOptionPane.showMessageDialog(this,"invalid First name");
      
    
     // Last Name
     
        }else if (l.getText().equals("")) {
            JOptionPane.showMessageDialog(null,"* Last Name should not be empty");
        } else if (!status2 || !status2){
            
            JOptionPane.showMessageDialog(this,"Invalid Last Name");
            
        }else if (comg.equals("Select one")) {
    JOptionPane.showMessageDialog(null, "SELECT THE GENDER");
    } else if (d == null) {
    JOptionPane.showMessageDialog(null, "SELECT THE DATE OF BIRTH");
    
    } else if (e.getText().isEmpty()) {
    JOptionPane.showMessageDialog(this, "ENTER THE EMAIL");
} else if (!isValidEmail(e.getText())) {
    JOptionPane.showMessageDialog(this, "INVALID EMAIL FORMAT, PLEASE ENTER A VALID EMAIL ADDRESS");
    
    }else if (m.getText().equals("")) {
            JOptionPane.showMessageDialog(null,"* Number box should not be empty");
        } else if (!numberstatus || !numberstatus){
            
            JOptionPane.showMessageDialog(this,"invalid Number");
  
    
    } else if (c.getText().isEmpty()) {
    JOptionPane.showMessageDialog(null, "ENTER THE CITY");
    
} else if (s.getText().isEmpty()) {
    JOptionPane.showMessageDialog(null, "ENTER THE STATE");
    
} else if (con.getText().isEmpty()) {
    JOptionPane.showMessageDialog(null, "ENTER Country");
    
} else if (p.getText().isEmpty()) {
    JOptionPane.showMessageDialog(null, "ENTER PINCODE");
    
    } else if (crp.getText().isEmpty() || confirm.getText().isEmpty()) {
            JOptionPane.showMessageDialog(null, "Please enter both passwords");
    
        }else if (crp.getText().equals("")) {
            JOptionPane.showMessageDialog(null,"* Create password should not be empty");
        } else if (!passstatus || !passstatus){
            
           // n.setText(" ");
           
            JOptionPane.showMessageDialog(confirm,"(?=.*[0-9]): At least one digit\n" +
"(?=.*[a-z]): At least one lowercase letter\n" +
"(?=.*[A-Z]): At least one uppercase letter\n" +
"(?=.*[!@#$%^&*()]): At least one special character   \n" +
". {8,}: Minimum length of 8 characters","CREATE PASSWORD",JOptionPane.WARNING_MESSAGE);
      
    
    
    // confirm password
        } else if (confirm.getText().equals("")) {
            JOptionPane.showMessageDialog(null,"*Confirm password should not be empty");
        } else if (!passstatus1 || !passstatus1){
            
            JOptionPane.showMessageDialog(confirm,"(?=.*[0-9]): At least one digit\n" +
"(?=.*[a-z]): At least one lowercase letter\n" +
"(?=.*[A-Z]): At least one uppercase letter\n" +
"(?=.*[!@#$%^&*()]): At least one special character   \n" +
". {8,}: Minimum length of 8 characters","CONFIRM PASSWORD",JOptionPane.WARNING_MESSAGE);
      
          
   //password Match
}else if (passstatus == passstatus1){
            
            JOptionPane.showMessageDialog(this,"Password Match");
        

    
} else {
    
    JOptionPane.showMessageDialog(null, "REGISTRATION SUCCESSFULL");
}

    // Load the JDBC driver
    Class.forName("oracle.jdbc.driver.OracleDriver");

    // Establish database connection
    Connection con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe", "system", "satya");

    // Prepare SQL statement
     String query = "INSERT INTO ADMIN_REGISTER  (ID,FIRST_NAME, LAST_NAME, GENDER, DATE_OF_BIRTH, EMAIL_ID, MOBILE_NO, CITY, STATE, COUNTRY, PIN_CODE,PASSWORD) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)";

    PreparedStatement ps = con.prepareStatement(query);

    // Set parameters
    ps.setInt(1, id);
    ps.setString(2, firstname);
    ps.setString(3, lastname); // Corrected data type
    ps.setString(4, gender);
    ps.setString(5,date);
    ps.setString(6, email);
    ps.setString(7, mobileno);
    ps.setString(8, city);
    ps.setString(9, state);
    ps.setString(10, country);
    ps.setString(11, pin);
    ps.setString(12, createpassword);
    

    // Execute update
    int rowsAffected = ps.executeUpdate();

    if (rowsAffected > 0) {
    JOptionPane.showMessageDialog(null, "REGISTRATION SUCCESSFULL");
} else {
    JOptionPane.showMessageDialog(null, "REGISTRATION FAILED");
}


    // Close resources
    ps.close();
    con.close();

    
} catch (NumberFormatException e) {
    JOptionPane.showMessageDialog(null, "Invalid ID format. Please enter a valid number.");
} catch (Exception e) {
    
}
            }
    }                                        

