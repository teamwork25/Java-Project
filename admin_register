    public class ValidationName{
        public static boolean name_Validation(String name){

            boolean status2 = false;
            String Name_Pattern = "^[A-Z][a-z]+( [A-Z][a-z]+)?$";

            Pattern pattern = Pattern.compile(Name_Pattern);
            Matcher matcher = pattern.matcher(name);

            if (matcher.matches()) {
                status2 = true;

            }else{
                status2 = false;
            }
            return status2;
}
    }
    
    public class Validationpass{
        public static boolean pass_Validation(String pass){

            boolean passstatus = false;
            String pass_Pattern = "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()]).{8,}$";

            Pattern pattern = Pattern.compile(pass_Pattern);
            Matcher matcher = pattern.matcher(pass);

            if (matcher.matches()) {
                passstatus = true;

            }else{
                passstatus = false;
            }
            return passstatus;
}
    }
    
    public class Validationnumber{
        public static boolean number_Validation(String number){

            boolean numberstatus = false;
            String number_Pattern = "^[6-9]\\d{9}$";

            Pattern pattern = Pattern.compile(number_Pattern);
            Matcher matcher = pattern.matcher(number);

            if (matcher.matches()) {
                numberstatus = true;

            }else{
                numberstatus = false;
            }
            return numberstatus;
}
    }

